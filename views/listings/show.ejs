<% layout("/layouts/boilerplate") %>
<body>
<div class="row justify-content-center">
    <div class="col-8 mt-3">

        <div class="card col-6 offset-3"> <!-- Center the card -->
            <h3 class="text-center">Listing details</h3> <!-- Moved the heading inside the card -->
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="...">
            <div class="card-body">
                <p class="card-text"> 
                    <b> <%= listing.title %> </b><br>
                    <%= listing.description %>  <br>
                    â‚¹ <%= listing.price %> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %><br>
                </p>
            </div>
        </div>
    </div>
    <br/>
    <div class="col-8 text-center"> <!-- Changed col-1 to col-8 for proper alignment -->
        <a href="/listings/<%=listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
        <form method="POST" action="<%=listing._id%>?_method=DELETE" class="d-inline"> <!-- Added d-inline to keep buttons inline -->
            <button class="btn btn-dark">Delete</button>
        </form>
    </div>
</div>
</body>